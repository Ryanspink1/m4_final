<div class="container">
  <div class="jumbotron">
    <div class="row">
      <div class ="col-md-7">
        <h2 align=center>Login</h2></br>
          <div class="caption" align=center>
            <%= form_for :session, url: login_path do |f|  %>
             <%= f.label "email" %></br>
             <%= f.email_field :email, placeholder: "email" %></br>
             <%= f.label "password" %></br>
             <%= f.password_field :password, placeholder: "password" %></br>
             <%= f.submit "Login" %></br>
            <% end %></br>
          </div></br>
   <p align=center><a id="create-account-button" class="btn btn-success btn-lg" href="/users/new" role="button">Create Account</a></p>

      </div>
    </div>
  </div>
</div>
