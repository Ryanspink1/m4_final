<h1 id="links-page-header">Links</h1>



<form id="add-link">
  <div class="form-group">
      <label for="">URL</label>
      <input type="" class="form-control" id="create-link-url" placeholder="Enter a URL">
    </div>
    <!-- <div id="url-warning" style="display:none">
      <p style="color:red">Please enter a link url</p>
    </div> -->
    <div class="form-group">
      <label for="">Title</label>
      <input type="" class="form-control" id="create-link-title" placeholder="Enter a Title">
    </div>
    <!-- <div id="title-warning" style="display:none">
      <p style="color:red">Please enter a link title</p>
    </div> -->

    <div class="form-group">
      <input type="" class="form-control" id="create-link-user-id" style="display:none" value="<%=@id  %>">
    </div>

  </form>
  <button id="submit-new-link" type="submit" onClick = "findFormValues()" class="btn btn-primary">Create Link</button>
  <br><br>
  <form>
    <div>
      <label for="">Filter by Name:</label>
      <input type="text" onkeyup="filterSearch()"class="form-control" id="search" placeholder="">
    </div>
  </form>
  <br>
  <div id="filter-by-read-buttons">
    <strong>Filter by Read Status:</strong><br>
    <button id="filter-by-read-button" type="submit" onClick = "filterByRead(true)" class="btn btn-primary">Show Read</button>
    <button id="filter-by-unread-button" type="submit" onClick = "filterByRead(false)" class="btn btn-primary">Show Unread</button>
  </div>

  <table id="links-table" class="table table-bordered">
    <tr>
      <h3 class="text-center"></h3>
    </tr>
    <tr>
      <th class="text-center" id="table-link-url">URL</th>
      <th class="text-center" id="table-link-title">Title</th>
      <th class="text-center">Read Status</th>
      <th class="text-center">Change Read Status</th>
      <th class="text-center">Edit URL/Title</th>
      <th class="text-center">Status</th>
    </tr>
  </table>
